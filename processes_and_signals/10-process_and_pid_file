#!/usr/bin/env bash
# Script that creates a PID file, prints messages, and handles signals

PIDFILE="/var/run/myscript.pid"
echo $$ > "$PIDFILE"

running=true

trap 'echo "Y U no love me?!"' SIGINT
trap 'echo "I hate the kill command"' SIGTERM
trap 'rm -f "$PIDFILE"; exit 1' SIGQUIT

while $running; do
    echo "To infinity and beyond"
    sleep 2
done
